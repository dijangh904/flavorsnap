{
  "info": {
    "_postman_id": "flavorsnap-api-collection",
    "name": "FlavorSnap API Collection",
    "description": "Complete API testing collection for FlavorSnap food classification service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Basic Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Detailed Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/detailed",
              "host": ["{{baseUrl}}"],
              "path": ["health", "detailed"]
            }
          },
          "response": []
        },
        {
          "name": "Get Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["metrics"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Classification",
      "item": [
        {
          "name": "Classify Food Image",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('label');",
                  "    pm.expect(jsonData).to.have.property('confidence');",
                  "    pm.expect(jsonData).to.have.property('all_predictions');",
                  "    pm.expect(jsonData).to.have.property('processing_time');",
                  "    pm.expect(jsonData).to.have.property('created_at');",
                  "    pm.expect(jsonData).to.have.property('request_id');",
                  "});",
                  "",
                  "pm.test(\"Confidence is between 0 and 1\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.confidence).to.be.at.least(0);",
                  "    pm.expect(jsonData.confidence).to.be.at.most(1);",
                  "});",
                  "",
                  "pm.test(\"Processing time is reasonable\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.processing_time).to.be.below(5);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": "test-food.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/predict",
              "host": ["{{baseUrl}}"],
              "path": ["predict"]
            }
          },
          "response": []
        },
        {
          "name": "Classify Without Image",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 400\", function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test(\"Error message is present\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "    pm.expect(jsonData.error).to.eql('No image provided');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": []
            },
            "url": {
              "raw": "{{baseUrl}}/predict",
              "host": ["{{baseUrl}}"],
              "path": ["predict"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Load Testing",
      "item": [
        {
          "name": "Rapid Classification Test",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Set iteration count for load testing",
                  "if (!pm.environment.get(\"loadTestIteration\")) {",
                  "    pm.environment.set(\"loadTestIteration\", 0);",
                  "} else {",
                  "    pm.environment.set(\"loadTestIteration\", pm.environment.get(\"loadTestIteration\") + 1);",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Response time is acceptable under load\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});",
                  "",
                  "pm.test(\"Service remains responsive\", function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 429]);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": "test-food.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/predict",
              "host": ["{{baseUrl}}"],
              "path": ["predict"]
            }
          },
          "response": []
        }
      ]
    },
